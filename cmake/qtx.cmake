macro(DETECT_QT)
	find_package( Qt5Core QUIET )
	if(Qt5Core_FOUND)
  		set(DEVELOPER_QT5 1)
	else(Qt5Core_FOUND)
  		set(DEVELOPER_QT5 0)
	endif(Qt5Core_FOUND)
endmacro(DETECT_QT)

macro(QTX_WRAP_CPP)
	if(DEVELOPER_QT5)
		QT5_WRAP_CPP(${ARGN})
	else(DEVELOPER_QT5)
		QT4_WRAP_CPP(${ARGN})
	endif(DEVELOPER_QT5)
endmacro(QTX_WRAP_CPP)

